{
    "name": "lmz/thefair-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "middleware"
    ],
    "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "thefair/thefairlib": "^4.2"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.5",
        "phpmd/phpmd": "^2.6",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/testing": "~2.0.0",
        "hyperf/watcher": "^2.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Library\\": "library/",
            "Installer\\": "installer/"
        },
        "files": [
            "library/Utils/Utility.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container",
            "php ./bin/hyperf.php > /dev/null 2>&1"
        ],
        "analyse": "phpstan analyse --memory-limit 600M -l 0 -c phpstan.neon ./app ./config",
        "cs-fix": "php-cs-fixer fix ./app",
        "start": "composer dump-autoload -o &&  php ./bin/hyperf.php && php ./bin/hyperf.php start",
        "request": "php ./bin/hyperf.php request",
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "upgrade": [
            "composer up",
            "composer dump-autoload -o"
        ]
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    }
}
